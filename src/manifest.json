{
    "manifest_version": 3,
    "name": "Todolis",
    "version": "2.0.0",
    "description": "Work-life balance made easy with Todolis for Chrome.",
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "assets/icons/icon16.png",
            "48": "assets/icons/icon48.png",
            "128": "assets/icons/icon128.png"
        }
    },
    "permissions": [
        "storage",
        "notifications",
        "alarms"
    ],
    "background": {
        "service_worker": "background.js"
    }
}